{
  "name": "jspm",
  "description": "Browser package management",
  "license": "Apache-2.0",
  "version": "3.0.0-beta",
  "scripts": {
    "build-browser": "tsc -p . && cp src/*.js lib/",
    "build-node": "ncc build -t -m src/node.js -e sver -s -e es-module-lexer",
    "build-node-production": "ncc build -t -m src/node.js -e sver -e es-module-lexer",
    "watch-build-node": "ncc build -t -m src/node.js -s -e sver -e es-module-lexer -w",
    "watch-build-node-production": "ncc build -t -m src/node.js -e sver -e es-module-lexer -w",
    "build": "npm run build-node && npm run build-browser",
    "test": "node test/test.js",
    "unit": "node src/script-lexer.js",
    "generate-maps": "node test/generate-maps.mjs"
  },
  "bin": {
    "jspm": "dist/index.js"
  },
  "main": "./lib/tracemap.js",
  "dependencies": {
    "es-module-lexer": "^0.3.17",
    "sver": "^1.8.3"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-export-default-from": "^7.10.4",
    "@babel/plugin-proposal-export-namespace-from": "^7.10.4",
    "@babel/plugin-proposal-numeric-separator": "^7.10.4",
    "@babel/plugin-syntax-class-properties": "^7.10.4",
    "@babel/plugin-transform-typescript": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@vercel/ncc": "^0.24.1",
    "assert-diff": "^3.0.1",
    "chalk": "^4.1.0",
    "clipboardy": "^2.3.0",
    "glob": "^7.1.6",
    "http-server": "^0.12.3",
    "make-fetch-happen": "^8.0.3",
    "mocha": "^8.1.3",
    "ora": "^5.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.28.2",
    "terser": "^5.3.3",
    "typescript": "^4.0.3"
  },
  "files": [
    "bin",
    "lib"
  ]
}
